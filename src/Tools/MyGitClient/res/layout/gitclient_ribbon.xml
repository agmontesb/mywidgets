<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <?xml-stylesheet type="text/css" href="#style"?>
    <extra id="style">
        .flex_container {
            display: flex;
            flex-direction: row;
            height: 75px;
        }

        .grid_container {
            /* flex: 1 1 20px; */
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
            grid-auto-rows: 1fr;
        }
        button {
            width: 150;
        }

    </extra>
    <category label="Category uno" class="grid_container">
<!--    <rmenu src="@menu/main_menu"/>-->
<!--    <rpanel class="grid_container" menuid="git">-->
        <labelframe class="grid_container" text="Info" >
            <button text="Version" command="Git/Version"/>
            <button text="Html Path" command="Git/Html_Path"/>
            <button text="Man Path" command="Git/Man_Path"/>
            <button text="Info Path" command="Git/Info_Path"/>
            <button text="Exec Path" command="Git/Info_Path"/>
        </labelframe>
        <labelframe class="grid_container" text="" >
            <checkbutton text="IsBare" variable="is_bare" indicatoron="0" offrelief="flat"/>
        </labelframe>
        <labelframe class="grid_container" text="Set" >
            <button text="Git Dir" command="Git/Git_Dir"/>
            <button text="Work Tree" command="Git/Work_Tree"/>
            <button text="Namespace" command="Git/Namespace"/>
            <button text="Exec Path" command="Git/Exec_path"/>
        </labelframe>
        <labelframe text="" class="grid_container">
            <button text="Open" command="Git/Open"/>
        </labelframe>
<!--    </rpanel>-->
    </category>
</settings>

