<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<settings>
    <?xml-stylesheet type="text/css" href="#style"?>
    <extra id="style">
        .grid {
          display: grid;
          grid-template-columns: 10px repeat(4, minmax(50px, 1fr) 10px);
          grid-template-rows: 10px repeat(2, minmax(50px, 1fr) 10px);
          justify-items:stretch;
          align-items:stretch;
        }
        #uno {
        	grid-column-start: 3;
            grid-row-start: 2;
        }
        .row {
          grid-column-start: 1;
          grid-column-end: -1;
        }
        .column {
          grid-row-start: 1;
          grid-row-end: 3;
          bg:light green;
          bd:4;
        }
        .blk {
            height:10;
            width:10;
            bg:black;
        }

    </extra>
    <category label="Category uno">
        <frame class="grid" side="top" fill="both" expand="yes">
            <frame class="blk" grid-column="1" grid-row="1"/>
            <frame class="blk" grid-column="3" grid-row="1"/>
            <frame class="blk" grid-column="5" grid-row="1"/>
            <frame class="blk" grid-column="7" grid-row="1"/>
            <frame class="blk" grid-column="9" grid-row="1"/>
            <frame class="blk" grid-column="1" grid-row="1"/>
            <frame class="blk" grid-column="1" grid-row="3"/>
            <frame class="blk" grid-column="1" grid-row="5"/>
            <label name="uno" text="p1" bg="gray" grid-column="2 / 5" grid-row="2"/>
<!--            <label text="row2"  bg="blue" grid-column="3" grid-row="1"/>-->
            <label text="row3"  bg="yellow" grid-column="6" grid-row="2"/>
            <label text="row4"  bg="green" grid-column="8" grid-row="2"/>
            <label text="row1" bg="red" grid-column="2" grid-row="4"/>
            <label text="col1" bg="gray" grid-column="4" grid-row="4"/>
            <label text="col2" bg="gray" grid-column="6" grid-row="4"/>
            <label text="col3" bg="gray" grid-column="8" grid-row="4"/>
<!--            <label text="col4"/>-->
        </frame>
    </category>
</settings>

